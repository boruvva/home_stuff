#!/bin/bash

# Check if an input file was provided
if [[ $# -ne 1 ]]; then
    echo "Usage: $0 <baseFilename>"
    exit 1
fi

base_filename=$1

# Create the output files, even if empty initially
touch "${base_filename}_c_file.txt"
touch "${base_filename}_cpp_file.txt"
touch "${base_filename}_cs_file.txt"

# Process each filename in the input file
while IFS= read -r filename; do
    case "$filename" in
        *.c)    echo "$filename" >> "${base_filename}_c_file.txt" ;;
        *.cpp)  echo "$filename" >> "${base_filename}_cpp_file.txt" ;;
        *.cs)   echo "$filename" >> "${base_filename}_cs_file.txt" ;;
    esac
done < "$base_filename" 
