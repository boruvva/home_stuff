#!/bin/bash

# Test script for split_files.sh

# Create a temporary directory for testing
TEST_DIR=$(mktemp -d)
cd $TEST_DIR || exit 1

# Create a sample file for testing
echo "This is a test file." > testfile.txt

# Test 1: Valid file input
echo "Running Test 1: Valid file input"
../split_files.sh testfile.txt
if [ -f "testfile.txt.partaa" ]; then
    echo "Test 1 Passed: File was split successfully."
else
    echo "Test 1 Failed: File was not split."
fi

# Test 2: Invalid file input
echo "Running Test 2: Invalid file input"
../split_files.sh non_existent_file.txt
if [ $? -eq 1 ]; then
    echo "Test 2 Passed: Correctly handled non-existent file."
else
    echo "Test 2 Failed: Did not handle non-existent file correctly."
fi

# Test 3: No file input
echo "Running Test 3: No file input"
../split_files.sh
if [ $? -eq 1 ]; then
    echo "Test 3 Passed: Correctly handled no input file."
else
    echo "Test 3 Failed: Did not handle no input file correctly."
fi

# Clean up
cd ..
rm -rf $TEST_DIR

echo "All tests completed and test files removed."
