private void checkAndGetEntityInStomp(BookingIdentifiers bookingIdentifiers, StompEntityType stompEntityTypeQuestion, String expectedState, long timeoutMillis) {
    final String entityKey = stompEntityTypeQuestion.sniffKeyFrom(bookingIdentifiers);
    long startTime = System.currentTimeMillis();
    boolean isBooked = false;

    while (!isBooked && (System.currentTimeMillis() - startTime) < timeoutMillis) {
        StompEntity entity = findEntityInStomp(stompEntityTypeQuestion, entityKey);
        verifyStompEntityIsOk(entity);
        isBooked = expectedState.equals(entity.getState());
        if (!isBooked) {
            try {
                Thread.sleep(1000); // Sleep for a defined interval before checking again
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
                throw new RuntimeException("Thread was interrupted", e);
            }
        }
    }

    if (!isBooked) {
        throw new RuntimeException("Entity was not booked within the expected timeout");
    }

    verifyStompEntityState(stompEntityTypeQuestion, expectedState, entityKey);
}
